<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.picturegallery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Ubiquitous Project"
        android:theme="@style/AppTheme" >

        <!-- Each activity is a page in android app -->
        <activity
            android:name="com.example.picturegallery.MainActivity"
            android:label="Ubiquitous Project" >
            <intent-filter>
 <!-- tells the app to launch this page (activity) first -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.thalmic.myo.scanner.ScanActivity"
            android:label="@string/myosdk__title_activity_scan"
            android:theme="@style/myosdk__ScanActivityTheme" />
    </application>

</manifest>